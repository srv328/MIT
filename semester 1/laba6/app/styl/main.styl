gap = 5px
size = 20px
centered = 0 auto
text = "Comic Sans MS"
$bord = 1px solid hotpink

set-color(opacity)
  background-color rgba(120, 150, 70, opacity)

doublegap(gap)
  2*gap

justifying(side)
  justify-items side
  text-align side

grid(content-size)
  display grid
  margin 0 auto
  grid-template-columns repeat(3, content-size)

.menu
  grid(1fr)
  justifying(center)
  width 60vmax

.details-block
  grid(max-content)
  justifying(left)

.fon
  set-color(0.4)

.select
  set-color(0.7)

.block
  margin 0.5vw
  & a
    text-decoration none

  & a:hover
    font-size: 1.06em

  & :hover
    set-color(1)

.flex-container
  display flex
  align-items center
  justify-content center

.big
  font-size 5vmax

.grid-container
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-template-rows repeat(3, min-content)
  grid-gap 20px
  align-content start

.item
  border 2px dashed #360063
  padding doublegap(gap)
  align-self start

  & img
    float left
    width 50%

  & img:hover
    transform: scale(1.08)

  & h2
    margin-top 7vmin
    text-align right
    margin-right 1.5vmax

  & p
    font-size 1.3em
    font-family 'Times New Roman'
    font-style italic

@media (max-width: 900px)
  .flex-container
    display none

  .menu
    grid-template-columns repeat(2, 1fr)

  .down
    grid-column 1 / 3

  .grid-container
    width 70%
    margin centered
    justify-content center
    grid-template-columns 1fr
    grid-template-rows repeat(9, min-content)

  .details-block
    grid-template-rows repeat(3, min-content)
    grid-template-columns 1fr

  tr,td
    font-size 0.75em

.top-panel
  display flex
  align-items center

.search-box
  background skyblue
  display flex
  padding gap
  width 100%
  height 35px
  margin-right doublegap(gap)

  & input
    border none
    outline none
    width 45%
    padding gap

  & button
    color white
    padding gap doublegap(gap)

span
  font-family 'Times New Roman'
  font-style italic
  font-size 1.9em


.pink
  color pink

.blue
  color blue

.red
  color red

.white
  color white

body
  background-color #736936
  background-attachment fixed

.left-text
  margin-right auto
  margin-left 0.5vmax

.right-text
  margin-left auto
  margin-right 0.5vmax

.footer
  display flex
  min-height 2.5vmax
  align-items center
  background-color #333
  color #fff

ul
  color orangered

summary
  font-weight bold

details
  padding doublegap(gap)
  margin-bottom doublegap(gap)
  color antiquewhite

table, th, td
  border $bord
  color orangered

table
  background url("../img/bg.jpg")
  margin centered
  border-collapse collapse

.person-name
  font-size 1.5*size
  text-align center
  color white
  font-family text

.person-info
  background url("../img/bg.jpg")
  font-size 1.5em
  text-align center
  margin centered
  width 70%

  & p
    font-size size
    font-family 'Comic Sans MS'

.center
  font-size 1.5em
  text-indent 1.5em
  text-align center

h1
  color ghostwhite